{
  "attachments": [
    {
      "color": "{{color}}",
      "blocks": [
        {
          "type": "header",
          "text": {
            "type": "plain_text",
            "text": ":bar_chart: Daily Report",
            "emoji": true
          }
        },
        {
          "type": "context",
          "elements": [
            {
              "type": "mrkdwn",
              "text": "*Date:* {{report_date}}"
            },
            {
              "type": "mrkdwn",
              "text": "*Total Issues:* {{total_events}}"
            }
          ]
        },
        {
          "type": "divider"
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": ":pushpin: *Event Type Breakdown:*\n{% for event_type, count in event_type_stats.items() %}\n• *{{ event_type }}*: {{ count }}\n{% endfor %}"
          }
        },
        {
          "type": "divider"
        },
        {
          "type": "section",
          "text": {
            "type": "mrkdwn",
            "text": ":trophy: *Top Events:*\n{% for event in top_events %}\n• {{ event.summary }} _(Type: {{ event.type }}, Time: {{ event.time }})_\n{% endfor %}"
          }
        },
        {
          "type": "context",
          "elements": [
            {
              "type": "mrkdwn",
              "text": "_Generated by AWS Monitoring System_ :robot_face:"
            }
          ]
        }
      ]
    }
  ]
}
